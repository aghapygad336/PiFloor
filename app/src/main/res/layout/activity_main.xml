<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical"
    tools:context="pifloor.MainActivity">
    <TextView
        android:id="@+id/text_main_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"/>
    <!--TODO: Change to MaterialButton-->
    <Button
        android:id="@+id/button_main_startTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_tutorial"/>
    <Button
        android:id="@+id/button_main_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"/>
</LinearLayout>
